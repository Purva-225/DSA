//BASED ON SIMPLE MATH NOTHING USE OF BINARY SEARCH OR OTHER APPROACHES A SIMPLEST PROBLEM OF THE DAY. 
//Code forces Round 126 (Div. 2) Drinks.  
//13/11  

#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    double sum = 0;
    for (int i = 0; i < n; i++) {
        double p;
        cin >> p;
        sum += p;
    }

    double result = sum / n;
    cout << fixed << setprecision(12) << result << "\n";
    return 0;
}
