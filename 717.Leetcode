/*Input: bits = [1,0,0]
Output: true
Explanation: The only way to decode it is two-bit character and one-bit character.
So the last character is one-bit character.*/

class Solution {
public:
    bool isOneBitCharacter(vector<int>& bits) {
         int n = bits.size();
        int count1 = 0;

        for(int i = n - 2; i >= 0 && bits[i] == 1; i--) {
        count1++;
    }
    return count1 % 2 == 0;
    }
};
